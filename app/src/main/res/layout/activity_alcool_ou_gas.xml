<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlcoolOuGasActivity">

    <ImageView
        android:id="@+id/imgLogoAlcool"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtInformacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Saiba a melhor opção para o\n abastecimento do seu carro"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@id/imgLogoAlcool"
        app:layout_constraintStart_toStartOf="@id/imgLogoAlcool"
        app:layout_constraintTop_toBottomOf="@id/imgLogoAlcool" />

    <EditText
        android:id="@+id/edtValorAlcool"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Preço Alcool ex: 1.90"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@id/imgLogoAlcool"
        app:layout_constraintStart_toStartOf="@id/imgLogoAlcool"
        app:layout_constraintTop_toBottomOf="@id/txtInformacao"

        />

    <EditText
        android:id="@+id/edtValorGas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Preço da Gasolina ex: 2.10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@id/imgLogoAlcool"
        app:layout_constraintStart_toStartOf="@id/imgLogoAlcool"
        app:layout_constraintTop_toBottomOf="@id/edtValorAlcool" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Calcular"
        app:layout_constraintEnd_toEndOf="@id/imgLogoAlcool"
        app:layout_constraintStart_toStartOf="@id/imgLogoAlcool"
        app:layout_constraintTop_toBottomOf="@id/edtValorGas" />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Nenhuma opção escolhida"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCalcular" />


</androidx.constraintlayout.widget.ConstraintLayout>